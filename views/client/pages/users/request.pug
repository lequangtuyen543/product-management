extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3

    include ../../partials/list-btn-users.pug

    .row 
      .col-12 
        +box-head("Lời mời đã gửi")


    .row 
      each user in users
        .col-6 
          div(class="box-user add")
            div(class="inner-avatar")
              img(src=(user.avatar ? user.avatar : "https://robohash.org/hicveldicta.png"), alt=user.fullName)
            div(class="inner-info")
              div(class="inner-name") #{user.fullName} 
              div(class="inner-buttons")
                button(class="mr-1 btn btn-sm btn-primary" btn-add-friend=user.id ) Kết bạn
                button(class="mr-1 btn btn-sm btn-secondary" btn-cancel-friend=user.id) Hủy 
            


  block script 
    script(type="module", src="/js/users.js") 