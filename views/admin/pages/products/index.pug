extends ../../layouts/default.pug

block main
  h1 Page Products

  card.mb-3   
    .card-header Filter and Search
    .card-body.row
      .col-6
        each item in filterStatus
          button(
            class=`btn btn-sm ml-1 btn-outline-success ${item.class}`
            button-status=item.status
            ) #{item.name}
      .col-6
        form#form-search
          .input-group  
            input(
              type="text"
              placeholder="Enter keyword..."
              name="keyword"
              class="form-control"
              value=keyword
            )
            .input-group-append
              button.btn.btn-success(type="submit") Search

  table.table.table-hover.table-sm 
    thead.thead-dark
      tr
        th(scope="col") #
        th(scope="col") Name
        th(scope="col") Price
        th(scope="col") Image
        th(scope="col") Status
        th(scope="col") Actions
    tbody
      each item, index in products
        tr
          th(scope="row") #{index + 1}
          td #{item.title}
          td $#{item.price}
          td 
            img(src=item.thumbnail, alt=item.title width="100" height="100")
          td 
            if item.status == 'active'
              a.badge.badge-success #{item.status}
            else  
              a.badge.badge-danger #{item.status}
          td 
            button.btn.btn-sm.btn-primary Edit
            button.btn.btn-sm.btn-danger Delete