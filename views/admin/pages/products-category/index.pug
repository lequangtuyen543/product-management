extends ../../layouts/default.pug
include ../../mixins/table-tree.pug

block main
  if(role.permissions.includes('products-category_view')) 
    h1 Category List

    card.mb-3   
      .card-header List
      .card-body.row
        .col-8
        .col-4.text-right
          if(role.permissions.includes('products-category_create')) 
            a.btn.btn-sm.btn-success(href=`${prefixAdmin}/products-category/create`) + Add New  

        table.table.table-hover.table-sm(
          checkbox-multi
        )
          thead.thead-dark
            tr
              th  
                input(type="checkbox" name="checkall")
              th(scope="col") #
              th(scope="col") Name
              th(scope="col") Position
              th(scope="col") Image
              th(scope="col") Status
              th(scope="col") Actions
          tbody
            +table-tree(records)
          

