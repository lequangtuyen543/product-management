extends ../../layouts/default.pug

block main
  h1 Category List

  card.mb-3   
    .card-header List
    .card-body.row
      .col-8
      .col-4.text-right
        a.btn.btn-sm.btn-success(href=`${prefixAdmin}/products-category/create`) + Add New  

      table.table.table-hover.table-sm(
        checkbox-multi
      )
        thead.thead-dark
          tr
            th  
              input(type="checkbox" name="checkall")
            th(scope="col") #
            th(scope="col") Name
            th(scope="col") Position
            th(scope="col") Image
            th(scope="col") Status
            th(scope="col") Actions
        tbody
          each item, index in records
            tr
              td 
                input(
                  type="checkbox" 
                  name="id" 
                  value=item.id 
                )
              th(scope="row") #{index + 1}
              td #{item.title}
              td 
                input(
                  type="number" 
                  name="position" 
                  value=item.position 
                  style="width: 60px;"
                  min="1"
                )
              td 
                img(src=item.thumbnail, alt=item.title width="100" height="100")
              td 
                if item.status == 'active'
                  a.badge.badge-success(
                    href="javascript:;"
                    data-status=item.status
                    data-id=item.id
                    button-change-status
                  ) #{item.status}
                else  
                  a.badge.badge-danger(
                    href="javascript:;"
                    data-status=item.status
                    data-id=item.id
                    button-change-status
                  ) #{item.status}
              td 
                a.btn.btn-sm.btn-secondary(href=`${prefixAdmin}/products-category/detail/${item.id}`) Detail
                a.btn.btn-sm.btn-warning(href=`${prefixAdmin}/products-category/edit/${item.id}`) Edit
                button.btn.btn-sm.btn-danger(
                  data-id=item.id
                  button-delete
                ) Delete

