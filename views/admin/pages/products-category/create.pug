extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main  
  if(role.permissions.includes('products-category_create'))
    +alert-error(3000)
    h1.mb-4 Add New Category

    form(
      action=`${prefixAdmin}/products-category/create` 
      method="POST" 
      enctype="multipart/form-data"
    )
      .form-group
        label(for="title") Title
        input#title.form-control(type="text" name="title" required)

      .form-group
        label(for="parent_id") Parent Id
        select#parent_id.form-control(name="parent_id") 
          option(value="") --Select Parent Category--
          if(records)
            +select-tree(records)

      .form-group
        label(for="desc") Description
        textarea#desc.form-control.textarea-mce(name="description" rows="5")    

      .form-group(upload-image)
        label(for="thumbnail") Thumbnail
        input#thumbnail.form-control-file(type="file" name="thumbnail" accept="image/*" upload-image-input)
        img.image-preview(src="" upload-image-preview)

      .form-group
        label(for="position") Position
        input#position.form-control(type="number" name="position" min="1" placeholder="Auto incremented")

      .form-group.form-check.form-check-inline
        input#statusActive.form-check-input(type="radio" name="status" value="active" checked)
        label.form-check-label(for="statusActive") Active

      .form-group.form-check.form-check-inline
        input#statusActive.form-check-input(type="radio" name="status" value="inactive")
        label.form-check-label(for="statusInActive") InActive

      .form-group
        button.btn.btn-primary(type="submit") Create Category

    script(src="/admin/js/product-category.js")   